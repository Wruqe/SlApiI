<div class="row">
  <div class="col-auto">
    <h2>Welcome! </h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <form class="new-post-form">
    <h3>Create a New Post:</h3>
      <div class="form-group">
        <label for="post-content">content:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <div class="col-md-6 posts-list">
  {{#if posts.length}}
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/posts/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">RATE COMMENT</button>
      </div>
    </div>
    {{/each}}
   </div>
  {{/if}}
</div>
{{> test}}
<script src="./js/profile.js"></script> 
